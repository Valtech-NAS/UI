---
headerTitle: Traineeships
---

<div class="hgroup">
  <h1 class="heading-xlarge">Preview your application</h1>
</div>
<fieldset class="fieldset-with-border">
  <legend class="heading-large">Your details</legend>
  {{> application-details }}
</fieldset>

<fieldset class="fieldset-with-border">
  <legend class="heading-large">
    Qualifications
    <a class="icon-with-text" href="apply-index.html#applyQualifications"><i class="the-icon fa fa-pencil"></i><span class="the-text">Amend details</span></a>
  </legend>
  <div class="qualifications-wrapper">
    <div class="qualification-table" id="gcse">
      <div class="hgroup-small">
        <h3 class="heading-small heading-qualType">GCSE</h3>
      </div>
      <table class="grid-3-4">
        <colgroup>
          <col class="t40">
          <col class="t25">
          <col class="t15">
          <col>
        </colgroup>
        <thead>
          <tr>
            <th class="th-qualSubject"><span class="heading-span">Subject</span></th>
            <th class="th-qualGrade"><span class="heading-span">Grade</span></th>
            <th class="th-qualYear"><span class="heading-span">Year</span></th>
          </tr>
        </thead>
        <tbody class="tbody-qual">
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="Maths" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="C" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2013" readonly>
            </td>
          </tr>
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="English" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="C" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2013" readonly>
            </td>
          </tr>
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="Science" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="D" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2013" readonly>
            </td>
          </tr>
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="Geography" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="C" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2013" readonly>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</fieldset>

