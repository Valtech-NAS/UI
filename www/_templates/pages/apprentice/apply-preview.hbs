---
headerTitle: Find an Apprenticeship
---

<div class="hgroup">
  <h1 class="heading-xlarge">Apply for vacancy</h1>
  <span class="subtitle">Preview your application</span>
</div>
<fieldset class="fieldset-with-border">
  <legend class="heading-large">Your details</legend>
  {{> application-details }}
</fieldset>

<fieldset class="fieldset-with-border">
  <legend class="heading-large">Education</legend>
  <div class="form-group">
    <label for="school-name" class="form-label">Name of most recent school/college</label>
    <span class="form-prepopped" id="schoolNamePre">St Bernards School</span>
  </div>
  <div class="inline-fixed">
    <p class="form-label">Years attended</p>
    <div class="form-group">
      <label for="school-from" class="form-label">From</label>
      <span class="form-prepopped" id="schoolFromPre">2008</span>
    </div>
    <div class="form-group">
      <label for="school-to" class="form-label">To</label>
      <span class="form-prepopped" id="schoolToPre">2011</span>
    </div>
  </div>
  <p>
    <a href="apply-index.html#applyEducation"><i class="fa fa-pencil"></i>Amend details</a>
  </p>
</fieldset>

<fieldset class="fieldset-with-border">
  <legend class="heading-large">Qualifications</legend>
  <div class="qualifications-wrapper">
    <div class="qualification-table" id="gcse">
      <div class="hgroup-small">
        <h3 class="heading-small heading-qualType">GCSE</h3>
      </div>
      <table class="grid-3-4">
        <colgroup>
          <col class="t40">
          <col class="t25">
          <col class="t15">
          <col>
        </colgroup>
        <thead>
          <tr>
            <th class="th-qualSubject"><span class="heading-span">Subject</span></th>
            <th class="th-qualGrade"><span class="heading-span">Grade</span></th>
            <th class="th-qualYear"><span class="heading-span">Year</span></th>
          </tr>
        </thead>
        <tbody class="tbody-qual">
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="Maths" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="A" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2011" readonly>
            </td>
          </tr>
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="English" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="B" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2011" readonly>
            </td>
          </tr>
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="Science" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="BB" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2011" readonly>
            </td>
          </tr>
          <tr class="tr-qualRow">
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="Geography" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="C" readonly>
            </td>
            <td class="td-qualcell">
              <input class="form-control qual-input-edit form-prepopped" type="text" value="2011" readonly>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <p>
    <a href="apply-index.html#applyQualifications"><i class="fa fa-pencil"></i>Amend details</a>
  </p>
</fieldset>

