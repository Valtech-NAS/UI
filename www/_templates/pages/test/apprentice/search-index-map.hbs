<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js">
</script>
<script type="text/javascript">
  function initialize() {
    var mapOptions = {
      center: { lat: 52.8849566, lng: -1.9770329},
      mapTypeControl: false,
      zoom: 6
    };
    var map = new google.maps.Map(document.getElementById('map-canvas'),
        mapOptions);
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>
<div class="hgroup">
  <h1 class="heading-xlarge">Find an apprenticeship</h1>
  <span class="subtitle">Search and apply for an apprenticeship in England</span>
</div>
<div class="grid-wrapper">
  <div class="grid grid-1-3">
    <div class="inner-block-padr">
      <div class="form-group">
        <label for="keywordSearch" class="form-label">Keywords (optional)</label>
        <!-- <span class="form-hint">Enter a postcode, town or city</span> -->
        <input type="text" id="keywordSearch" class="form-control form-control-1-1" >
      </div>
      <div class="form-group">
        <label for="locationSearch" class="form-label">Apprenticeship location</label>
        <span class="form-hint">Enter a postcode, town or city</span>
        <input type="text" id="locationSearch" class="form-control form-control-1-1" >
      </div>
      <div class="form-group">
        <label for="searchWithin" class="form-label">Within</label>
        <select id="searchWithin">
          <option value="">2 miles</option>
          <option value="">5 miles</option>
          <option value="">10 miles</option>
          <option value="">15 miles</option>
          <option value="">20 miles</option>
          <option value="">30 miles</option>
          <option value="">40 miles</option>
        </select>
      </div>
      <div class="form-group">
        <a href="search-results-map.html" class="button">Search</a>
      </div>
    </div>
  </div>
  <div class="grid grid-2-3">
    <div class="map-container" id="map-canvas" style="height: 600px"></div>
  </div>
</div>